<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".Categories">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <include layout="@layout/card_ads_box"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/ic_hand_money_euro_coin_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:layout_margin="5dp"
android:textColor="#8BC34A"
                android:onClick="startLoanStep"
                android:text="Personal Loan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
android:onClick="studentLoan"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/pink_500"

                android:background="@drawable/ic_school_solid" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:textColor="@color/pink_500"
                android:layout_margin="5dp"
                android:text="Student Loan"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
android:onClick="bankLoan"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView
                android:backgroundTint="@color/purple_200"

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_building_columns_solid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="#673AB7"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Bank Loan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:onClick="insurance"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/teal_700"

                android:background="@drawable/ic_car_burst_solid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:textColor="#009688"
                android:layout_margin="5dp"
                android:text="Insurance"/>
        </LinearLayout>
            <include layout="@layout/card_ads_box"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

</RelativeLayout>