<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".Categories">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:onClick="startLoanStep"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/ic_hand_money_euro_coin_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:layout_margin="5dp"
android:textColor="#8BC34A"

                android:text="Personal Loan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
android:onClick="studentLoan"
            android:layout_marginBottom="15dp"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/pink_500"

                android:background="@drawable/ic_school_solid" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:textColor="@color/pink_500"
                android:layout_margin="5dp"
                android:text="Student Loan"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
android:onClick="bankLoan"
            android:layout_marginBottom="15dp"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView
                android:backgroundTint="@color/purple_200"

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_building_columns_solid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="#673AB7"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Bank Loan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:onClick="insurance"
            android:background="@drawable/cat_item_bg"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/teal_700"

                android:background="@drawable/ic_car_burst_solid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:padding="5dp"
                android:textColor="#009688"
                android:layout_margin="5dp"
                android:text="Insurance"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:onClick="insurance"
                android:background="@drawable/cat_item_bg"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/teal_700"

                    android:background="@drawable/ic_car_burst_solid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:padding="5dp"
                    android:textColor="#FF9800"
                    android:layout_margin="5dp"
                    android:text="Car Loan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:onClick="others"
                android:background="@drawable/cat_item_bg"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/teal_700"

                    android:background="@drawable/ic_coins_solid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:padding="5dp"
                    android:textColor="#FF5722"
                    android:layout_margin="5dp"
                    android:text="Others"/>

            </LinearLayout>

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewCatPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                ads:adSize="300x250"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>

</RelativeLayout>